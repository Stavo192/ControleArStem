<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/txt_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modelo do Ar-Condicionado"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_estado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Desligado"
        android:textSize="16sp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_ligar_desligar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ligar"/>

    <SeekBar
        android:id="@+id/seek_temperatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="14"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/txt_temperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperatura: 16Â°C"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
